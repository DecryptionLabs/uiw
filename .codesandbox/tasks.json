{
  // These tasks will run in order when initializing your CodeSandbox project.
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "pnpm install"
    }
  ],

  // These tasks can be run from CodeSandbox. Running one will open a log in the app.
  "tasks": {
    "build": {
      "name": "build",
      "command": "pnpm build"
    },
    "build:cli": {
      "name": "build:cli",
      "command": "pnpm build:cli"
    },
    "build:registry": {
      "name": "build:registry",
      "command": "pnpm build:registry"
    },
    "dev": {
      "name": "dev",
      "command": "pnpm dev",
      "runAtStart": true,
      "preview": {
        "port": 3001
      }
    },
    "dev:cli": {
      "name": "dev:cli",
      "command": "pnpm dev:cli"
    },
    "start:cli": {
      "name": "start:cli",
      "command": "pnpm start:cli"
    },
    "lint": {
      "name": "lint",
      "command": "pnpm lint"
    },
    "lint:fix": {
      "name": "lint:fix",
      "command": "pnpm lint:fix"
    },
    "preview": {
      "name": "preview",
      "command": "pnpm preview"
    },
    "typecheck": {
      "name": "typecheck",
      "command": "pnpm typecheck"
    },
    "format:write": {
      "name": "format:write",
      "command": "pnpm format:write"
    },
    "format:check": {
      "name": "format:check",
      "command": "pnpm format:check"
    },
    "sync:templates": {
      "name": "sync:templates",
      "command": "pnpm sync:templates"
    },
    "prepare": {
      "name": "prepare",
      "command": "pnpm prepare"
    },
    "check": {
      "name": "check",
      "command": "pnpm check"
    },
    "release": {
      "name": "release",
      "command": "pnpm release"
    },
    "pub:beta": {
      "name": "pub:beta",
      "command": "pnpm pub:beta"
    },
    "pub:release": {
      "name": "pub:release",
      "command": "pnpm pub:release"
    },
    "test": {
      "name": "test",
      "command": "pnpm test"
    }
  }
}
